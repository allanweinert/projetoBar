package br.inf.ids.treina1.api.entradaProduto;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.EnumType;
import javax.persistence.Enumerated;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.SequenceGenerator;
import javax.persistence.Table;
import javax.validation.constraints.NotNull;
import javax.validation.constraints.Size;

import br.inf.ids.treina1.api.entradaProduto.enums.Situacao;
import lombok.Getter;
import lombok.Setter;

@Entity
@SequenceGenerator(name = "SEQ_ENTRADA", sequenceName = "SEQ_ENTRADA", allocationSize = 1)
@Table(name = "entrada")
@Getter @Setter
public class EntradaProduto {
	
	@Id
	@Column(name = "entradaid")
	@GeneratedValue(strategy = GenerationType.SEQUENCE, generator = "SEQ_ENTRADA")
	private Long id;
	
	@NotNull
	@Size(max = 300)
	private String nome;
	
	@NotNull
	private String marca;
	
	@NotNull
	private String unidade;
	
	private int estoque_minimo;
	
	@NotNull
	private int valor_venda;
	
	private int valor_custo;
	
	

//Dados de entrada
//private String fornecedor;(estrangeiro)
	private	int serie_nfe;
	private	int numero_nfe;
	private	int data_entrada;
//Produtos
//private produto(estrangeiro)
	@NotNull
	private int	quantidade;
	private int	ipi; //(%)
	private int	icms; //(%)
	private int	cfop; //(%)
	private int valor_unitario;
	private int	valor_total;

//Totais da entrada (soma dos dados do produto)
/*private int	valor_icms;
private	int valor_produto;
private	int valor_frete;
private	int valor_desconto;
private	int valor_total_entrada;*/

}
